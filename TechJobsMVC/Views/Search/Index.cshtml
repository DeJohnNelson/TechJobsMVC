<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />
        
    @{    
        @if (ViewBag.jobs != null)
        {
        @foreach (var column in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <th>Id:</th>
                    <td>@column.Id</td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>@column.Name</td>
                </tr>
                <tr>
                    <th>Employer:</th>
                    <td>@column.Employer</td>
                </tr>
                <tr>
                    <th>Location:</th>
                    <td>@column.Location</td>
                </tr>
                <tr>
                    <th>Position:</th>
                    <td>@column.PositionType</td>
                </tr>
                <tr>
                    <th>Skill:</th>
                    <td>@column.CoreCompetency</td>
                </tr>
            </table>
        }

        }
        }

</div>